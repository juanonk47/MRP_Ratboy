@model IEnumerable<MRP_Ratboy.Models.fuentePoder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenuAdmin.cshtml";
}

<h2>Fuentes de poder</h2>

<p class="btn btn-info" style="cursor:pointer;">
    @Html.ActionLink("NUEVO", "Create", null, 
     new { @style="text-decoration: none; color: #fff;" })
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.costoProveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.costoVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.watts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tamaño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.certificado)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.costoProveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.costoVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.watts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tamaño)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.certificado)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idFuentePoder }, new { @class="btn btn-info" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idFuentePoder }, new { @class="btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idFuentePoder }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }

</table>
