@model IEnumerable<MRP_Ratboy.Models.Usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenuAdmin.cshtml";
}

<h2>Usuarios</h2>

<p class="btn btn-info" style="cursor:pointer;">
    @Html.ActionLink("NUEVO", "Create", null, 
     new { @style="text-decoration: none; color: #fff;" })
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                Correo Electronico
            </th>
            <th>
                Estatus del usuario
            </th>
            <th>
                Tipo de usuario
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @if (item.estatus == 1)
                    {
                        <label>Activo</label>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo_usuarios.descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idUsuario }, new { @class="btn btn-info" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idUsuario }, new { @class="btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idUsuario }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }

</table>
