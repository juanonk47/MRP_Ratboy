@model IEnumerable<MRP_Ratboy.Models.UsuariosAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenuAdmin.cshtml";
}

<h2>Empleados Ratboy</h2>

<p class="btn btn-info" style="cursor:pointer;">
    @Html.ActionLink("NUEVO", "Create", null, 
     new { @style="text-decoration: none; color: #fff;" })
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Persona.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole.nombre)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRole.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idUserAdmin }, new { @class="btn btn-info" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idUserAdmin }, new { @class="btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idUserAdmin }, new { @class="btn btn-danger" })
        </td>
    </tr>
}

</table>
