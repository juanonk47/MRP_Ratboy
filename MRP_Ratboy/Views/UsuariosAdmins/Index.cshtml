@model IEnumerable<MRP_Ratboy.Models.UsuariosAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenuAdmin.cshtml";
}

<h2>Usuarios ratmin</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole.nombre)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRole.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idUserAdmin }) |
            @Html.ActionLink("Details", "Details", new { id=item.idUserAdmin }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idUserAdmin })
        </td>
    </tr>
}

</table>
