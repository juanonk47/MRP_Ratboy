@model IEnumerable<MRP_Ratboy.Models.tarjetaVideo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMenuAdmin.cshtml";
}

<h2>Tarjetas de vídeo</h2>

<p class="btn btn-info" style="cursor:pointer;">
    @Html.ActionLink("NUEVO", "Create", null, 
     new { @style="text-decoration: none; color: #fff;" })
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arquitectura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cudaCore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.frameBuffer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.velocidadReloj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.velocidadMemoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreModelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.watts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estatus)
            </th>
            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.arquitectura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cudaCore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.frameBuffer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.velocidadReloj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.velocidadMemoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreModelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.watts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estatus)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idTarjetaVideo }, new { @class="btn btn-info" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idTarjetaVideo }, new { @class="btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idTarjetaVideo }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }

</table>
